# General
NODE_ENV=production

# Database
DATABASE_URL=postgres://postgres:root@localhost:5432/ironcondortrader

# Session
SESSION_SECRET=your-very-strong-session-secret

# (Optional) Session store config for connect-pg-simple
SESSION_DB_TABLE=session
SESSION_DB_SCHEMA=public

# (Optional) Port for Express server
PORT=3000

# (Optional) CORS settings
CORS_ORIGIN=https://your-frontend-domain.com

# (Optional) API keys for external services (e.g., NSE API)
NSE_API_KEY=your-nse-api-key

# (Optional) Drizzle ORM config
DRIZZLE_MIGRATIONS_FOLDER=./migrations

# (Optional) Frontend environment variables (must start with VITE_ for Vite)
VITE_API_URL=https://your-backend-domain.com